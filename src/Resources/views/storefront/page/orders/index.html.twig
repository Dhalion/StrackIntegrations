                                                    data-sorting-direction="default">
                                                {{ sortingIcon }}
                                            </button>
                                        </div>
                                        <div class="col col-xl-1">
                                            {% sw_icon 'eye-open' %}
                                        </div>
                                    </div>
                                </div>
